#!/bin/sh

# scripts/test: Run test suite for application. Optionally pass in a path to an
#              individual test file to run a single test.


set -e

cd "$(dirname "$0")/.."

[ -z "$DEBUG" ] || set -x


echo "==> Running testsâ€¦"
./mvnw -Dorg.slf4j.simpleLogger.defaultLogLevel=DEBUG test

